<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:layout_margin="16dp"
  android:gravity="center"
  android:orientation="vertical">

  <Button
    android:id="@+id/controls_error"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:text="Trigger playback error" />

  <Button
    android:id="@+id/controls_set_streamable"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:text="Make book streamable" />

  <Button
    android:id="@+id/controls_set_not_streamable"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:text="Make book not streamable" />

</LinearLayout>
