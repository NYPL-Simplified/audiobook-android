<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="80dp"
  android:layout_height="80dp">

  <ImageView
    android:id="@+id/player_toc_item_download_failed_refresh"
    android:layout_width="32dp"
    android:layout_height="38dp"
    android:layout_alignParentRight="true"
    android:layout_centerVertical="true"
    android:clickable="true"
    android:focusable="true"
    android:visibility="visible"
    android:src="@drawable/toc_refresh" />

  <ImageView
    android:id="@+id/player_toc_item_download_failed_error_icon"
    android:layout_width="32dp"
    android:layout_height="32dp"
    android:layout_centerVertical="true"
    android:layout_toLeftOf="@id/player_toc_item_download_failed_refresh"
    android:layout_marginRight="16dp"
    android:clickable="true"
    android:focusable="true"
    android:visibility="visible"
    android:src="@drawable/toc_error" />

</RelativeLayout>
